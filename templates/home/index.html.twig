{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Tech & Open Source Podcast{% endblock %}

{% block body %}
<section class="container py-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold">Tech & Open Source Podcast</h1>
        <img src="{{ asset('Picture/img-header.jpg') }}" alt="Tech Podcast" class="img-fluid rounded shadow my-4">
    </div>

    <div class="text-center text-md-start">
        <p class="lead">Plongez dans l'univers passionnant de la technologie et de l'open source !</p>
        <ul class="list-unstyled">
            <li><i class="bi bi-check-circle-fill text-success"></i> Les dernières innovations technologiques</li>
            <li><i class="bi bi-check-circle-fill text-success"></i> L'actualité du monde open source</li>
            <li><i class="bi bi-check-circle-fill text-success"></i> Des analyses approfondies</li>
        </ul>
    </div>
</section>

<hr class="my-5">

<section class="container">
    <h2 class="text-center mb-4">Derniers Épisodes</h2>
    <div class="row g-4">
        {% for episode in episodes %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    {# Image de couverture #}
                    <a href="{{ path('app_episode_show', {'id': episode.id}) }}" class="text-decoration-none">
                        <img src="{{ episode.coverImage }}" alt="{{ episode.title }}" class="card-img-top" style="height: 200px; object-fit: cover;">
                    </a>

                    <div class="card-body d-flex flex-column">
                        {# Titre de l'épisode #}
                        <h3 class="card-title">{{ episode.title }}</h3>

                        {# Description tronquée avec le filtre "u" #}
                        <p class="card-text">{{ episode.description|u.truncate(100, '...') }}</p>

                        {# Lecteur audio amélioré #}
                        <div class="mt-3 mb-4 custom-audio-player">
                            <audio controls class="w-100">
                                <source src="{{ episode.audio }}" type="audio/mpeg">
                                Votre navigateur ne supporte pas la balise audio.
                            </audio>
                        </div>

                        {# Bouton pour accéder à l'épisode complet #}
                        <a href="{{ path('app_episode_show', {'id': episode.id}) }}" class="btn btn-outline-primary mt-auto mb-2">
                            <i class="bi bi-play-circle"></i> Voir l'épisode complet
                        </a>

                        {# Bouton pour ouvrir le modal #}
                        <button type="button" class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#commentModal{{ episode.id }}">
                            <i class="bi bi-chat-left-text"></i> Ajouter un commentaire
                        </button>
                    </div>
                </div>
            </div>

            {# Modal pour le formulaire de commentaire #}
            <div class="modal fade" id="commentModal{{ episode.id }}" tabindex="-1" aria-labelledby="commentModalLabel{{ episode.id }}" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="commentModalLabel{{ episode.id }}">Ajouter un commentaire</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            {{ form_start(commentForms[episode.id], {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                                {{ form_errors(commentForms[episode.id]) }}
                                {{ form_widget(commentForms[episode.id]) }}
                                <button type="submit" class="btn btn-primary mt-3">
                                    <i class="bi bi-send"></i> Envoyer
                                </button>
                            {{ form_end(commentForms[episode.id]) }}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
{% endblock %}